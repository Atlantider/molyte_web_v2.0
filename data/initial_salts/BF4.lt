    pair_coeff @atom:b @atom:b 0.095 3.5814
    pair_coeff @atom:f @atom:f 0.060 3.1181
  }

  write_once("In Settings") {
    bond_coeff @bond:type1 386.59 1.39
  }

  write_once("In Settings") {
    angle_coeff @angle:type1 80.0000 109.47
